<%- include('./partials/header') %>

<h1>Playlist</h1>
<section id="show-page">
    <div>Title: </div>
    <div><%= song.title %></div>
    <div>Artist: </div>
    <div><%= song.artist %></div>
    <div>Album:</div>
    <div><%= song.album %></div>
    <div>Link:</div>
    <div><%= song.link %></div>

<br><br><h2>Reviews</h2>
    <% if (user) { %>
      <form id="add-review-form" method="POST"
        action="/playlist/<%= playlist._id %>/reviews">
        <label>Review:</label>
        <textarea name="content"></textarea>
      </form>
    <% } %>
<%- include('./partials/footer') %>